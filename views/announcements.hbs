<div class="row">
  {{> left-sidebar route='announcements'}}
  <div class="col-sm-10">
    <div class="d-grid mb-3">
      <a href="/announcements" class="text-decoration-none btn btn-outline-dark">
        <h1 class="text-center"><i class="fa-solid fa-bullhorn"></i> HELLO! 即時通公告欄</h1>
      </a>
    </div>
    <form action="/announcements" class="d-flex mb-3">
      <input class="form-control me-2" name="keyword" type="text" placeholder="依標題搜尋" value="{{ keyword }}">
      <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
    {{> announcement-list}}
    <nav class="mt-3" aria-label="page navigation">
      <ul class="pagination justify-content-center">
        <li class="page-item {{#ifCond pagination.currentPage 1}}disabled{{/ifCond}}">
          <a class="page-link" href="/announcements?page={{ pagination.prev }}&keyword={{ keyword }}"
            aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
        {{#each pagination.pages}}
          {{#ifCond this ../pagination.currentPage}}
            <li class="page-item active"><a class="page-link" href="#">{{ this }}</a></li>
          {{else}}
            <li class="page-item">
              <a class="page-link" href="/announcements?page={{ this }}&keyword={{ ../keyword }}">{{ this }}</a>
            </li>
          {{/ifCond}}
        {{/each}}
        <li class="page-item {{#ifCond pagination.currentPage pagination.totalPage}}disabled{{/ifCond}}">
          <a class="page-link" href="/announcements?page={{ pagination.next }}&keyword={{ keyword }}"
            aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
          </a>
        </li>
      </ul>
    </nav>
  </div>
</div>